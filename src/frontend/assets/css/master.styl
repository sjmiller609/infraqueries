@import '_settings'

normalize-css()
base()

// fonts

.title
  color: #111
  line-height: 1.2em
  text-transform: uppercase
  font-weight: 900
  font-style: normal
  font-size: 24px
  letter-spacing: 0.05em
  padding-right: 20px

.subtitle, h1, h2, h3, h4
  color: #111
  font-weight: 400
  font-style: normal
  letter-spacing: 0.06em

a.subtitle
  line-height: 28px;
  padding-right: 20px

a, a:focus, a:hover
  text-decoration: none
  outline: none

h1, h2
  font-weight: 500
  text-align: center
  margin: 1em 0
  margin-bottom: 0

h3, h4
  text-align: left
  margin: 0.5em 0

.vm-text
  color: white
  text-align: center

.modal-text
  font-size: 18px


// format

html, body
  width: 100%
  height: 100%

.canvas
  display: block
  position:absolute
  bottom:0
  top:0
  left:0
  right:0
  margin-top:20px
  margin-bottom:20px
  margin-right:50px
  margin-left:50px

.header
  padding-bottom: 50px

.navigation
  display: inline-block
  text-align: left

.cloud
  // padding: 50px
  // margin: auto
  // width: 70%
  // height: 70%
  // background: #ecf0f1
  // outline: black solid 2px

  width: 800px
  height: 200px

  background: #ecf0f1;
  background: linear-gradient(top, #ecf0f1 5%, d6f0fd 100%);
  background: -webkit-linear-gradient(top, #ecf0f1 5%, d6f0fd 100%);
  background: -moz-linear-gradient(top, #ecf0f1 5%, d6f0fd 100%);
  background: -ms-linear-gradient(top, #ecf0f1 5%, d6f0fd 100%);
  background: -o-linear-gradient(top, #ecf0f1 5%, d6f0fd 100%);

  border-radius: 1000px;
  -webkit-border-radius: 1000px;
  -moz-border-radius: 1000px;

  position: relative;
  margin: 200px auto 20px;
  padding: 100px 75px


.cloud:after, .cloud:before
  content: '';
  position: absolute;
  background: #ecf0f1;
  z-index: -1

.cloud:after
  // width: 100px; height: 100px;
  // top: -50px; left: 50px;
  width: 300px; height: 300px;
  top: -150px; left: 200px;

  border-radius: 250px;
  -webkit-border-radius: 250px;
  -moz-border-radius: 250px;

.cloud:before
  // width: 180px; height: 180px;
  // top: -90px; right: 50px;
  width: 450px; height: 450px;
  top: -220px; right: 120px;

  border-radius: 500px;
  -webkit-border-radius: 500px;
  -moz-border-radius: 500px;

.cloud-shape
  float: left
  width: 200px;
  height: 100px;

.cloud-container
  position: absolute
  width: 90%
  height: 110%
  top: -50px
  right: 50px
  margin: auto

.vm-container, .vm-cluster
  float: left
  margin: auto

.vm-cluster
  width: 100%

.vm
  margin: 15px
  width: 150px
  height: 150px
  line-height: 150px

  border-radius: 100px;
  background: #2c3e50


/* The Modal (background) */
.modal
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 9000; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: hidden; /* disable scroll*/
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */


/* Modal Content/Box */
.modal-content
  background: #ecf0f1
  margin: 10% auto; /* 15% from the top and centered */
  padding: 20px;
  border: 1px solid black;
  width: 70%; /* Could be more or less, depending on screen size */
  height: 50%
  margin-left: auto ;
  margin-right: auto ;
  text-align: center ;

  /*lock in place*/
  max-height: calc(100%);
  position: fixed;
  top: 25%;
  left: 50%;
  transform: translate(-50%, -40%);

.vm-name
  height: 100%
  padding: 100px 0


.about-text
  padding: 20px 100px
